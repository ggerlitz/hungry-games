<!DOCTYPE html>
<html>
<head>
  <title>HungryGames</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
	<span class="logo"><%= link_to 'HungryGames', root_path %></span>
	<nav>
		<% if current_user %>
			<span>Hello <%= current_user.first_name %></span>
			<%= link_to 'sign out', signout_path, method: :delete %>
			<%= link_to 'edit profile', edit_user_path(current_user) %>
		<% else %>
			<%= link_to 'sign in', signin_path %>
			<%= link_to 'sign up', new_user_path %>
		<% end %>
	</nav>
</header>
<main>
	<% if flash[:notice] %>
		<div class="notice"><%= flash[:notice].html_safe %></div>
	<% end %>
	<% if roulettable_events and current_user %>
		<%= link_to 'Roulette?', roulette_path, method: :post %>
	<% end %>

	<%= yield %>
</main>

</body>
</html>
