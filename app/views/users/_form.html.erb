<%= form_for @user, html: { multipart: true } do |f| %>
	<% if @user.errors.any? %>
		<div class="alert">
			<% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</div>
	<% end %>
	
	<p>
		<%= f.label :first_name, "First Name" %>
		<%= f.text_field :first_name, required: true, placeholder: "First Name" %>
	</p>
	<p>
		<%= f.label :last_name, "Last Name" %>
		<%= f.text_field :last_name, required: true, placeholder: "Last Name" %>
	</p>
	<p>
		<%= f.label :email %>
		<%= f.email_field :email, required: true, placeholder: "Email" %>
	</p>
	<% if @user.new_record? %>
		<p>
			<%= f.label :password %>
			<%= f.password_field :password, required: true, placeholder: "Password" %>
		</p>
		<p>
			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation, required: true, placeholder: "Password" %>
		</p>
	<% end %>
	<p>
		<%= f.label :address %>
		<%= f.text_field :address %>
	</p>
	<p>
		<%= f.label :bio %>
		<%= f.text_area :bio %>
	</p>
	<p>
		<%= f.label :avatar %>
		<%= f.file_field :avatar %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>